<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/taps_layout"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nguyen.clickergame.MainMenu">
    
    <TextView
        android:id="@+id/taps_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/taps_left"
        android:layout_alignBottom="@+id/taps_left"
        android:layout_centerHorizontal="true"
        android:text="@string/title_taps_middle"
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/taps_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/taps_middle"
        android:layout_alignBottom="@+id/taps_middle"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@id/taps_middle"
        android:layout_centerHorizontal="true"
        android:text="@string/title_taps_right"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/taps_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="14dp"
        android:layout_marginTop="72dp"
        android:layout_marginLeft="18dp"
        android:layout_toLeftOf="@id/taps_middle"
        android:layout_centerHorizontal="true"
        android:text="@string/title_taps_right"
        android:textSize="25sp"/>


    <ImageView
        android:id="@+id/classic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/menu_options"/>

    <ImageView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/classic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:src="@mipmap/menu_options"/>


</RelativeLayout>